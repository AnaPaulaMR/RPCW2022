extends layout

block content
  .w3-card-4.w3-margin
    header(class="w3-container w3-teal")
      h1 #{data.codigo}: #{data.titulo}
    
    .w3-center.w3-text-teal.w3-padding
      span.w3-margin Nível: #{data.nivel} 
      span.w3-margin Status: #{data.status} 
      span.w3-margin Pai: #{data.pai.codigo}
    
    hr(style="margin: 0")
    
    .w3-container
      p= data.descricao 
    
    if data.filhos.length > 0
      .w3-text-teal.w3-margin-left
        h2 Lista de descendentes:
      .w3-container
        ul
          each d in data.filhos
            li 
              a(href='/classe/' + d.codigo)= d.codigo
              span : #{d.titulo}
    
    if rel.length > 0 
      .w3-text-teal.w3-margin-left
        h2 Lista de relações:
      .w3-container
        ul
          each r in rel
              li #{r.idRel.replace(/([A-Z])/g, ' $1').trim().toLowerCase().replace(/^e/, 'É')} [  
                a(href='/classe/' + r.codigo)= r.codigo
                span : #{r.titulo} ]
    
    footer(class="w3-container w3-teal w3-padding")
      .w3-container
        .w3-left
          a(href='javascript: history.back()') Voltar à página anterior
        .w3-right
          a(href='/') Voltar à página inicial
      .w3-container.w3-center
        address Generated by CLAVApp :: 2022-Abr, apmr
